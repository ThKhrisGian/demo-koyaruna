---
import siteData from "../data/site.json";
---

<section class="p-16 px-32 bg-neutral text-neutral-content">
  <div class="container mx-auto grid md:grid-cols-2 gap-12">
    <!-- Contact Info -->
    <div>
      <h2
        class="text-3xl font-bold text-neutral-content mb-6 relative inline-block"
      >
        CONTACTO
        <span class="block w-12 h-1 bg-primary mt-2"></span>
      </h2>
      <p><strong>DIRECCIÓN:</strong> {siteData.company.address}</p>
      <p>
        <strong>TELÉFONOS:</strong>
        <a href="tel:8001230045" class="text-primary"
          >{siteData.company.phone[0]}</a
        >; <a href="tel:8001230046" class="text-primary"
          >{siteData.company.phone[1]}</a
        >
      </p>
      <p><strong>CORREO:</strong> {siteData.company.email}</p>
      <p><strong>WE ARE OPEN:</strong> Mn-Fr: 10 am-8 pm</p>
      <div class="flex space-x-4 mt-4 text-primary">
        <!-- Icons for social media -->
        <a href="#"><i class="fab fa-facebook text-2xl"></i></a>
        <a href="#"><i class="fab fa-twitter text-2xl"></i></a>
        <a href="#"><i class="fab fa-instagram text-2xl"></i></a>
        <a href="#"><i class="fab fa-vimeo text-2xl"></i></a>
        <a href="#"><i class="fab fa-youtube text-2xl"></i></a>
        <a href="#"><i class="fab fa-pinterest text-2xl"></i></a>
      </div>
    </div>

    <!-- Contact Form -->
    <div>
      <h2
        class="text-3xl font-bold text-neutral-content mb-6 relative inline-block"
      >
        PONGÁMONOS EN CONTACTO
        <span class="block w-12 h-1 bg-primary mt-2"></span>
      </h2>
      <form class="space-y-4">
        <input
          type="text"
          placeholder="Your name"
          class="w-full p-3 bg-base-200 text-base-content rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary"
        />
        <input
          type="email"
          placeholder="Your e-mail"
          class="w-full p-3 bg-base-200 text-base-content rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary"
        />
        <textarea
          placeholder="Your message"
          class="w-full p-3 h-32 bg-base-200 text-base-content rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary"
        ></textarea>
        <button
          type="submit"
          class="bg-primary hover:bg-accent text-primary-content hover:text-accent-content font-semibold py-3 px-6 rounded-lg transition w-full md:w-auto"
          >SEND</button
        >
      </form>
    </div>
  </div>
</section>
