---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const servicios = await getCollection("servicios");
console.log(servicios);
---

<section class="py-16 px-6 bg-base-content text-base-content">
  <div class="container mx-auto text-center">
    <h2
      class="text-3xl md:text-4xl font-bold text-neutral-content mb-12 relative inline-block uppercase tracking-wide"
    >
      <span class="block w-16 h-1 bg-primary mx-auto mt-3"></span>
      Servicios
    </h2>
    <div
      class="grid grid-cols-1 sm:grid-cols-[repeat(auto-fit,minmax(290px,1fr))] gap-10 justify-center"
    >
      {
        servicios.map((servicio) => (
          <div class="relative flex w-full sm:w-80 flex-col rounded-xl bg-neutral bg-clip-border text-neutral-content shadow-md mx-auto">
            <div class="relative mx-4 -mt-6 h-40 overflow-hidden rounded-xl">
              <img
                src={"/../.." + servicio.data.img}
                alt={servicio.data.title}
                class="w-full h-full object-cover"
              />
            </div>
            <div class="p-6 text-left">
              <h5 class="mb-2 block font-sans text-xl font-semibold leading-snug tracking-normal text-primary-content antialiased">
                {servicio.data.title}
              </h5>
              <p class="block font-sans text-base font-light leading-relaxed text-inherit antialiased">
                {servicio.data.detail}
              </p>
            </div>
            <div class="p-6 pt-0 text-left">
              <button class="select-none rounded-lg bg-primary py-3 px-6 text-left align-middle font-sans text-xs font-bold uppercase text-primary-content shadow-md transition-all hover:shadow-lg focus:opacity-[0.85] active:opacity-[0.85] cursor-pointer">
                Leer m√°s
              </button>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
